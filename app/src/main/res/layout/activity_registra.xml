<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.gabrielf.apppedidos.RegistraActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nombre" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_correo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_nombre"
        android:hint="Correo Electronico" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_usuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_correo"
        android:hint="Usuario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/btn_registrar"
        android:layout_marginTop="60dp"
        android:onClick="onSignUpClick"
        android:background="#ff5722"
        android:textColor="#ffffff"
        android:layout_below="@+id/tv_pass2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tv_pass1"
        android:layout_alignRight="@+id/tv_usuario"
        android:layout_alignEnd="@+id/tv_usuario"
        android:layout_below="@+id/tv_usuario"
        android:hint="Password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tv_pass2"
        android:layout_alignRight="@+id/tv_pass1"
        android:layout_alignEnd="@+id/tv_pass1"
        android:layout_below="@+id/tv_pass1"
        android:layout_alignLeft="@+id/tv_pass1"
        android:layout_alignStart="@+id/tv_pass1"
        android:hint="Confirmar Password" />

</RelativeLayout>
