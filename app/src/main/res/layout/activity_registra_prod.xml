<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.gabrielf.apppedidos.RegistraProdActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nomProd"
        android:hint="Nombre Producto"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detalleProd"
        android:hint="Detalle Producto"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_precioProd"
        android:hint="Precio Producto"
        android:inputType="numberDecimal"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/btn_prod"
        android:background="@drawable/botonpulsado"
        android:textColor="#fefefe"
        android:onClick="onClick"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btn_eliminar"
        android:onClick="onEliminar"
        android:background="@drawable/botonpulsado"
        android:textColor="#fefefe"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_below="@+id/btn_prod"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:id="@+id/btn_modificar"
        android:background="@drawable/botonpulsado"
        android:textColor="#fefefe"
        android:onClick="premodificar"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btn_eliminar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre Producto"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#181616"
        android:textSize="@dimen/abc_text_size_menu_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Detalle Producto"
        android:id="@+id/textView11"
        android:layout_below="@+id/tv_nomProd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#181616"
        android:textSize="@dimen/abc_text_size_menu_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Precio Producto"
        android:id="@+id/textView12"
        android:layout_below="@+id/tv_detalleProd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#181616"
        android:textSize="@dimen/abc_text_size_menu_material" />
</RelativeLayout>
